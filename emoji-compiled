// Note: The layout below does not define a standard layout
// ('NoSymbol'). In this diagram above, the layout is shown combined wit
// us(basic) and some modifications from 'hyper'
// (hyper:hyper_super_alt_ctrl and hyper:L3L_Multi).

partial alphanumeric_keys modifier_keys
xkb_symbols "map00" {
    name[Group1]= "Emoji map";

    // The TLDE key is not mapped, as I'm using it for LVL3. 
    // However, you can map it if you have another LVL3 key.
    // key <TLDE> { [ NoSymbol, NoSymbol,  NoSymbol, NoSymbol ] };    // <TLDE> 
    key <AE01> { [ NoSymbol, NoSymbol,  U1F386, U1F387 ] };                   // 1  // ğŸ†ğŸ‡
    key <AE02> { [ NoSymbol, NoSymbol,  U1F389, U1F38A ] };		      // 2  // ğŸ‰ğŸŠ
    key <AE03> { [ NoSymbol, NoSymbol,  sterling,    U1F4B2  ] };	      // 3 Â£ // ğŸ’²
    key <AE04> { [ NoSymbol, NoSymbol,  EuroSign,    U1F4B5  ] };	      // 4 â‚¬ // ğŸ’µ
    key <AE05> { [ NoSymbol, NoSymbol,  U1F4AF, U1F33B  ] };  		      // 5  // ğŸ’¯ğŸŒ»
    key <AE06> { [ NoSymbol, NoSymbol,	U1F483, U1F334  ] };	   	      // 6  // ğŸ’ƒğŸŒ´
    key <AE07> { [ NoSymbol, NoSymbol,	U1F57A, U1F339  ] };	      	      // 7  // ğŸ•ºğŸŒ¹
    key <AE08> { [ NoSymbol, NoSymbol,  enfilledcircbullet,   degree  ] }; // 8 - â€¢/Â°
    key <AE09> { [ NoSymbol, NoSymbol,  leftsinglequotemark,  U2772  ] };  // 9  // â²
    key <AE10> { [ NoSymbol, NoSymbol,  rightsinglequotemark, U2773  ] };  // 0  // â³
    key <AE11> { [ NoSymbol, NoSymbol,  endash, 	      notequal  ] }; // minus - â€“/â‰ 
    key <AE12> { [ NoSymbol, NoSymbol,  emdash, 	      plusminus ] }; // equal - â€”/Â±

    key <AD01> { [ NoSymbol, NoSymbol,  U1F605,U1F60C 	] };	       // q  // ğŸ˜…ğŸ˜Œ
    key <AD02> { [ NoSymbol, NoSymbol,  U1F381, U1F4F1	] };	       // w  // ğŸğŸ“±
    key <AD03> { [ NoSymbol, NoSymbol,  U1F937, U1F644	] };	       // e  // ğŸ¤·ğŸ™„
    key <AD04> { [ NoSymbol, NoSymbol,  U1F923, U1F448	] };	       // r  // ğŸ¤£ğŸ‘ˆ
    key <AD05> { [ NoSymbol, NoSymbol,  U1F44D, U1F44E  ] };	       // t  // ğŸ‘ğŸ‘
    key <AD06> { [ NoSymbol, NoSymbol,  U1F622, U1F62D	] };	       // y  // ğŸ˜¢ğŸ˜­
    key <AD07> { [ NoSymbol, NoSymbol,  U1F60E, U261D   ] };	       // u  // ğŸ˜â˜
    key <AD08> { [ NoSymbol, NoSymbol,  U1F607, U1F31E	] };	       // i  // ğŸ˜‡ğŸŒ
    key <AD09> { [ NoSymbol, NoSymbol,  U1F44C, U1F4A5  ] };	       // o  // ğŸ‘ŒğŸ’¥
    key <AD10> { [ NoSymbol, NoSymbol,  U1F97A , U1F9E8 ] };	       // p  // ğŸ¥ºğŸ§¨
    key <AD11> { [ NoSymbol, NoSymbol,  U27E6, U2045    ] };	       // bracketleft  // âŸ¦â…
    key <AD12> { [ NoSymbol, NoSymbol,  U27E7, U2046    ] };	       // bracketright  // âŸ§â†

    key <LSGT> { [ NoSymbol, NoSymbol,  U1F43B, U1F43C  ] };	       // <LSGT>   // ğŸ»ğŸ¼
    key <AC01> { [ NoSymbol, NoSymbol,  U1F3B7, U1F3B9  ] };	       // a   // ğŸ·ğŸ¹
    key <AC02> { [ NoSymbol, NoSymbol, 	U1F600, U2728	] };	       // s  // ğŸ˜€âœ¨
    key <AC03> { [ NoSymbol, NoSymbol,	U1F3A4, U1F447  ] };	       // d  // ğŸ¤ğŸ‘‡
    key <AC04> { [ NoSymbol, NoSymbol,	U1F525, U1F60A	] };	       // f  // ğŸ”¥ğŸ˜Š
    key <AC05> { [ NoSymbol, NoSymbol,	U1F601, U1F914	] };	       // g  // ğŸ˜ğŸ¤”
    key <AC06> { [ NoSymbol, NoSymbol,	U2764UFE0F , U1F495  ] };	       // h  // â¤ï¸ğŸ’•
    key <AC07> { [ NoSymbol, NoSymbol,	U1F602 ,U1F970 	] };	       // j  // ğŸ˜‚ğŸ¥°
    key <AC08> { [ NoSymbol, NoSymbol,	U1F618, U1F60D  ] };	       // k  // ğŸ˜˜ğŸ˜
    key <AC09> { [ NoSymbol, NoSymbol,	U1F926, U1F449 	] };	       // l  // ğŸ¤¦ğŸ‘‰
    key <AC10> { [ NoSymbol, NoSymbol, U1F3D6 , U1F305 ] };	       // The â˜€ï¸   doesn't work in the conversion... // ğŸ–ğŸŒ…
    key <AC11> { [ NoSymbol, NoSymbol,	U2E22, U2E23 	] };	       // apostrophe  // â¸¢â¸£
    key <BKSL> { [ NoSymbol, NoSymbol,	U2E24, U2E25    ] };	       // backslash   // â¸¤â¸¥

    key <AB01> { [ NoSymbol, NoSymbol,	U1F92A,	U1F408	] };	       // z  // ğŸ¤ªğŸˆ
    key <AB02> { [ NoSymbol, NoSymbol,	U1F91E,	U1F415	] };	       // x  // ğŸ¤ğŸ•
    key <AB03> { [ NoSymbol, NoSymbol,	U1F44F,	U1F375 	] };	       // c  // ğŸ‘ğŸµ
    key <AB04> { [ NoSymbol, NoSymbol,	U270C , 	U1F30B	] };	       // v  // âœŒğŸŒ‹
    key <AB05> { [ NoSymbol, NoSymbol,	U1F64F,	U270A	] };	       // b  // ğŸ™âœŠ
    key <AB06> { [ NoSymbol, NoSymbol,	U1F62B,	U1F3BC	] };	       // n  // ğŸ˜«ğŸ¼
    key <AB07> { [ NoSymbol, NoSymbol,	U1F4AA,	U1F31B	] };	       // m  // ğŸ’ªğŸŒ›
    key <AB08> { [ NoSymbol, NoSymbol,	U300A,	U1F648	] };	       // comma   // ã€ŠğŸ™ˆ
    key <AB09> { [ NoSymbol, NoSymbol,	U300B,	U1F649	] };	       // period  // ã€‹ğŸ™‰
    key <AB10> { [ NoSymbol, NoSymbol,	U21E1,	U1F64A	] };	       // slash   // â‡¡ğŸ™Š

};

partial alphanumeric_keys modifier_keys
xkb_symbols "map01" {
    include "emoji(map00)"
    name[Group1]= "Emoji map (version 1) - reserved for user expansion";
    // Overwrite individual settings as follows
    key <AC02> { [ NoSymbol, NoSymbol, 	U1F600, U2728	] };	               // s  // ğŸ˜€âœ¨
};

partial alphanumeric_keys modifier_keys
