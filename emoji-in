// Note: The layout below does not define a standard layout
// ('NoSymbol'). In this diagram above, the layout is shown combined wit
// us(basic) and some modifications from 'hyper'
// (hyper:hyper_super_alt_ctrl and hyper:L3L_Multi).

partial alphanumeric_keys modifier_keys
xkb_symbols "map00" {
    name[Group1]= "Emoji map";

    // The TLDE key is not mapped, as I'm using it for LVL3. 
    // However, you can map it if you have another LVL3 key.
    // key <TLDE> { [ NoSymbol, NoSymbol,  NoSymbol, NoSymbol ] };    // <TLDE> 
    key <AE01> { [ NoSymbol, NoSymbol,  ğŸ†, ğŸ‡ ] };                   // 1 
    key <AE02> { [ NoSymbol, NoSymbol,  ğŸ‰, ğŸŠ ] };		      // 2 
    key <AE03> { [ NoSymbol, NoSymbol,  sterling,    ğŸ’²  ] };	      // 3 Â£
    key <AE04> { [ NoSymbol, NoSymbol,  EuroSign,    ğŸ’µ  ] };	      // 4 â‚¬
    key <AE05> { [ NoSymbol, NoSymbol,  ğŸ’¯, ğŸŒ»  ] };  		      // 5 
    key <AE06> { [ NoSymbol, NoSymbol,	ğŸ’ƒ, ğŸŒ´  ] };	   	      // 6 
    key <AE07> { [ NoSymbol, NoSymbol,	ğŸ•º, ğŸŒ¹  ] };	      	      // 7 
    key <AE08> { [ NoSymbol, NoSymbol,  enfilledcircbullet,   degree  ] }; // 8 - â€¢/Â°
    key <AE09> { [ NoSymbol, NoSymbol,  leftsinglequotemark,  â²  ] };  // 9 
    key <AE10> { [ NoSymbol, NoSymbol,  rightsinglequotemark, â³  ] };  // 0 
    key <AE11> { [ NoSymbol, NoSymbol,  endash, 	      notequal  ] }; // minus - â€“/â‰ 
    key <AE12> { [ NoSymbol, NoSymbol,  emdash, 	      plusminus ] }; // equal - â€”/Â±

    key <AD01> { [ NoSymbol, NoSymbol,  ğŸ˜…,ğŸ˜Œ 	] };	       // q 
    key <AD02> { [ NoSymbol, NoSymbol,  ğŸ, ğŸ“±	] };	       // w 
    key <AD03> { [ NoSymbol, NoSymbol,  ğŸ¤·, ğŸ™„	] };	       // e 
    key <AD04> { [ NoSymbol, NoSymbol,  ğŸ¤£, ğŸ‘ˆ	] };	       // r 
    key <AD05> { [ NoSymbol, NoSymbol,  ğŸ‘, ğŸ‘  ] };	       // t 
    key <AD06> { [ NoSymbol, NoSymbol,  ğŸ˜¢, ğŸ˜­	] };	       // y 
    key <AD07> { [ NoSymbol, NoSymbol,  ğŸ˜, â˜   ] };	       // u 
    key <AD08> { [ NoSymbol, NoSymbol,  ğŸ˜‡, ğŸŒ	] };	       // i 
    key <AD09> { [ NoSymbol, NoSymbol,  ğŸ‘Œ, ğŸ’¥  ] };	       // o 
    key <AD10> { [ NoSymbol, NoSymbol,  ğŸ¥º , ğŸ§¨ ] };	       // p 
    key <AD11> { [ NoSymbol, NoSymbol,  âŸ¦, â…    ] };	       // bracketleft 
    key <AD12> { [ NoSymbol, NoSymbol,  âŸ§, â†    ] };	       // bracketright 

    key <LSGT> { [ NoSymbol, NoSymbol,  ğŸ», ğŸ¼  ] };	       // <LSGT>  
    key <AC01> { [ NoSymbol, NoSymbol,  ğŸ·, ğŸ¹  ] };	       // a  
    key <AC02> { [ NoSymbol, NoSymbol, 	ğŸ˜€, âœ¨	] };	       // s 
    key <AC03> { [ NoSymbol, NoSymbol,	ğŸ¤, ğŸ‘‡  ] };	       // d 
    key <AC04> { [ NoSymbol, NoSymbol,	ğŸ”¥, ğŸ˜Š	] };	       // f 
    key <AC05> { [ NoSymbol, NoSymbol,	ğŸ˜, ğŸ¤”	] };	       // g 
    key <AC06> { [ NoSymbol, NoSymbol,	â¤ï¸ , ğŸ’•  ] };	       // h 
    key <AC07> { [ NoSymbol, NoSymbol,	ğŸ˜‚ ,ğŸ¥° 	] };	       // j 
    key <AC08> { [ NoSymbol, NoSymbol,	ğŸ˜˜, ğŸ˜  ] };	       // k 
    key <AC09> { [ NoSymbol, NoSymbol,	ğŸ¤¦, ğŸ‘‰ 	] };	       // l 
    key <AC10> { [ NoSymbol, NoSymbol, ğŸ– , ğŸŒ… ] };	       // The â˜€ï¸   doesn't work in the conversion...
    key <AC11> { [ NoSymbol, NoSymbol,	â¸¢, â¸£ 	] };	       // apostrophe 
    key <BKSL> { [ NoSymbol, NoSymbol,	â¸¤, â¸¥    ] };	       // backslash  

    key <AB01> { [ NoSymbol, NoSymbol,	ğŸ¤ª,	ğŸˆ	] };	       // z 
    key <AB02> { [ NoSymbol, NoSymbol,	ğŸ¤,	ğŸ•	] };	       // x 
    key <AB03> { [ NoSymbol, NoSymbol,	ğŸ‘,	ğŸµ 	] };	       // c 
    key <AB04> { [ NoSymbol, NoSymbol,	âœŒ , 	ğŸŒ‹	] };	       // v 
    key <AB05> { [ NoSymbol, NoSymbol,	ğŸ™,	âœŠ	] };	       // b 
    key <AB06> { [ NoSymbol, NoSymbol,	ğŸ˜«,	ğŸ¼	] };	       // n 
    key <AB07> { [ NoSymbol, NoSymbol,	ğŸ’ª,	ğŸŒ›	] };	       // m 
    key <AB08> { [ NoSymbol, NoSymbol,	ã€Š,	ğŸ™ˆ	] };	       // comma  
    key <AB09> { [ NoSymbol, NoSymbol,	ã€‹,	ğŸ™‰	] };	       // period 
    key <AB10> { [ NoSymbol, NoSymbol,	â‡¡,	ğŸ™Š	] };	       // slash  

};

partial alphanumeric_keys modifier_keys
xkb_symbols "map01" {
    include "emoji(map00)"
    name[Group1]= "Emoji map (version 1) - reserved for user expansion";
    // Overwrite individual settings as follows
    key <AC02> { [ NoSymbol, NoSymbol, 	ğŸ˜€, âœ¨	] };	               // s 
};

partial alphanumeric_keys modifier_keys
xkb_symbols "map02" {
    include "emoji(map00)"
    name[Group1]= "Emoji map (version 2) - reserved for user expansion";
};


